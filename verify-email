        <button class="return-btn" onclick="returnToApp()">Open App</button>
        <div class="loading" id="loading">
            <div class="spinner"></div>
            Opening app...
        </div>
        <div class="subtitle">
            Redirecting you back to the Rizzler app.<br>
            If the app doesn't open automatically, tap the button above.
        </div>
    </div>

    <script>
        function returnToApp() {
            const loading = document.getElementById('loading');
            loading.style.display = 'block';
            
            // Try to open the app using the custom scheme
            const appUrl = 'rizzler://';
            
            // For iOS/Android deep linking
            window.location.href = appUrl;
            
            // Fallback: try to redirect after a short delay
            setTimeout(() => {
                // You can add a fallback URL here, like your app store page
                // window.location.href = 'https://apps.apple.com/app/your-app-id';
                loading.style.display = 'none';
            }, 3000);
        }

        // Auto-redirect on page load
        window.onload = function() {
            // Small delay to let the page render first
            setTimeout(returnToApp, 1000);
        };

        // Handle URL parameters if you need to pass data to the app
        function getUrlParams() {
            const urlParams = new URLSearchParams(window.location.search);
            return Object.fromEntries(urlParams.entries());
        }

        // You can modify this to handle specific verification tokens or other data
        const params = getUrlParams();
        if (params.token) {
            // If you need to pass the token to the app, modify the appUrl
            // appUrl = `rizzler://verify?token=${params.token}`;
        }
    </script>
